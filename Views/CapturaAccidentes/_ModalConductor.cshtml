    <script>
         function mostrarModalCapturarConductor() {

        $.ajax({
            url: '@Url.Action("ModalCapturaConductor")',
            type: 'POST',
            contentType: "application/json; charset=utf-8",
            dataType: "html",
            success: function (data) {
                $('#ModalBodyCapturarConductor').html(data);
                $('#capturarConductorModal').modal('show');
            }
        });
    }
    function guardarVehiculoConductor() {
        var formData = $("#propietarioConductorForm").serialize();
        console.log(formData)
        $.ajax({
            url: '@Url.Action("ActualizarConConductor")',
            type: 'POST',
            data: formData,
            success: function (response) {
            sitteg_success("Se ha agregado al propietario como conductor");
                $('#modalAgregarConductor').modal('hide');
                $('.modal-backdrop').remove();
                abrirModalDetalles();
               
            },
            error: function (error) {
                console.log("ER",error)
                var errorMessage = error.responseText || "Ocurrió un error, inténtelo nuevamente más tarde.";
                sitteg_warning(errorMessage);
            }
        });
    }
     function sinConductor() {

        var formData = $("#sinConductorForm").serialize();
        console.log(formData)
        $.ajax({
            url: '@Url.Action("ActualizarConConductor")',
            type: 'POST',
            data: formData,
            success: function (response) {
                sitteg_success("Se desconoce al conductor");
                $('#modalAgregarConductor').modal('hide');
                $('.modal-backdrop').remove();
                abrirModalDetalles();

            },
            error: function (error) {
                console.log("ER", error)
                var errorMessage = error.responseText || "Ocurrió un error, inténtelo nuevamente más tarde.";
                sitteg_warning(errorMessage);
            }
        });
    }
     function abrirModalDetalles() {
            $.ajax({
            url: '@Url.Action("ModalAgregarComplemeto")',
                type: 'POST',
                contentType: "application/json; charset=utf-8",
                dataType: "html",
                success: function (data) {
                    $('#modalComplementoVehiculo').modal('show');
                $('#ModalBodymodalComplementoVehiculo').html(data);
                }
            });
        }

    function buscarConductor() {
        var Mydata = $("#otroConductorForm").serialize();
        console.log(Mydata);
        $.ajax({
            url: '/CapturaAccidentes/BuscarConductor',
            type: 'POST',
            data: Mydata,
            success: function (response) {
                console.log("Response:", response);
                if (response.length === 0) {
                    sitteg_warning("La búsqueda no arrojó resultados.");
                } else {
                    var grid = $("#gridConductores").data("kendoGrid");
                    grid.dataSource.data(response);

                }
            },
            error: function (error) {
                sitteg_warning('Ocurrió un error en la búsqueda.');
            }
        });
    }

</script>
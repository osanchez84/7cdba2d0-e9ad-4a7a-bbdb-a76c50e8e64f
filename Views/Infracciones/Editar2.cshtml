                                        @(Html.Kendo().DateTimePickerFor(t => t.fechaInfraccion)
                                                .Label(l => l.Content("Fecha: <b>(obligatorio)</b>:"))
                                                .HtmlAttributes(new { style = "width: 100%", required = "required" })

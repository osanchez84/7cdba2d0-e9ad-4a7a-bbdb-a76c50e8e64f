<script>
    function mostrarModalAgregarCarretera() {
        $.ajax({
            url: '@Url.Action("MostrarModalAgregarCarretera")',
            type: 'POST',
            contentType: "application/json; charset=utf-8",
            dataType: "html",
            success: function (data) {
                $('#ModalBodyCarretera').html(data);
                $('#agregarCarretera').modal('show');
            }
        });
    }


</script>
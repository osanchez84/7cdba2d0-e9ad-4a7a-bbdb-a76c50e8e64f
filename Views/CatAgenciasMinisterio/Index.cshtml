
<div class="mainContainer bg-light">

    <section class="mx-md-3 mx-lg-4 mx-xl-5 bg-white boxShadow my-5 rounded">
        <div class="row align-items-center justify-content-between px-4 px-md-4 pt-3 pb-2">
            <div class="col-12 col-md-6 col-lg-5 col-xl-auto">
                <div class="row align-items-center justify-content-center justify-content-md-start">
                    <div class="col-auto">
                        <i class="icon-ministerio h1 colorPrimary"></i>
                    </div>
                    <div class="col-auto my-3">
                        <h2 class="m-0 h3"><b>Catálogo de agencias de ministerio</b></h2>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-7 col-xl-auto">
                <div class="row">
                    <div class="col-auto btnOutline btnOutlinePrimary my-2 mx-auto mx-xl-2 p-0">
                        <button href="#" id="btnNueaOf" onclick="mostrarModal()">
                            <h6 class="m-0 d-flex align-items-center"><i class="icon-addMinisterio h5 mb-0 me-2"></i><b>Agregar nueva agencia de ministerio</b></h6>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="bg-light py-1"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 mb-4 px-4 rounded gridCustom">
                <div id="tablaAgenciasMinisterio">
                    <div class="row justify-content-between mb-1 titleCustom">
                        <div class="col-12 col-md-auto mt-4 mb-2">
                            <h5 class="px-4"><b>Listado agencias de ministerio</b></h5>
                            <h6 class="px-4 text-muted">Edita o inactiva las agencias de ministerio.</h6>
                        </div>
                    </div>
                    <partial name="_ListaAgenciasMinisterio" model="Model" />

                     <!-----------------------------------------------------------UPDATE--------------------------------------------------------------------------------------------->
                    <div class="modal fade modalCustom" id="editarAgenciaministerio" tabindex="-1" aria-labelledby="editarAgenciaministerio" aria-hidden="true">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-body" id="ModalBodEditarAgenciaministerio">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal fade modalCustom" id="agregarAgenciaministerio" tabindex="-1" aria-labelledby="agregarAgenciaministerioLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-body" id="ModalBodyaAgregarAgenciaministerio">
                                </div>
                            </div>
                        </div>
                    </div>



                   

                    <!-----------------------------------------------------------DELETE--------------------------------------------------------------------------------------------->
                    <div class="modal fade modalCustom" id="eliminarAgenciaministerio" tabindex="-1" aria-labelledby="eliminarAgenciaministerioLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-body" id="ModalBodyEliminarAgenciaministerio">
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>

</div>


<script>
    function mostrarModal() {
        $.ajax({
            url: '@Url.Action("AgregarAgenciaMinisterioModal")',
            type: 'POST',
            contentType: "application/json; charset=utf-8",
            dataType: "html",
            success: function (data) {
                if (data.error) {
                    sitteg_warning("El usuario no tienen los permisos para esta acción");
                } else {
                $('#ModalBodyaAgregarAgenciaministerio').html(data);
                $('#agregarAgenciaministerio').modal('show');
                }
            }
        });
    }



</script>
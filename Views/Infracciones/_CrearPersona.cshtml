        </div>
        <div class="col-md-4">
            <div class="controlForm">
                @(Html.Kendo().TextBoxFor(t => t.CURPFisico)
                    .Label(l => l.Content("CURP <b>(obligatorio)</b>:"))
                    .HtmlAttributes(new { style = "width: 100%; height:58px;", required = "required" })

                            read.Action("Entidades_Drop", "Personas");
                        });
                    })
                    .HtmlAttributes(new { style = "width:100%;", required = "required",id="idEntidad" })
                    )
            </div>
        </div>
        <div class="col-md-4">
            <div class="controlForm">
                <label>Municipio:</label>
                @(Html.Kendo().DropDownListFor(m => m.PersonaDireccion.idMunicipio)
                    .DataTextField("Text")
                    .DataValueField("Value")
                    .OptionLabel("Selecciona un Municipio")
                    .DataSource(source =>
                    {
                        source.Read(read =>

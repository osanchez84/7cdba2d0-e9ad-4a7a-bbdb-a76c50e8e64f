            </div>
        </div>
        <div class="col-md-4">
            <div class="controlForm">
                @(Html.Kendo().TextBoxFor(t => t.apellidoMaterno)
                    .Label(l => l.Content("Apellido materno: <b>(obligatorio)</b>:"))
                    .HtmlAttributes(new { style = "width: 100%; height:58px;", required = "required" })
                    )
            </div>
        </div>
        
    </div>
    <div class="row my-2">

                                        @(Html.Kendo().DropDownListFor(m => m.IdMunicipio).Filter(FilterType.Contains)
                                                .BindTo((SelectList)ViewBag.CatMunicipios)
                                                .OptionLabel("-- Seleccione --")
                                                .HtmlAttributes(new { style = "width:100%;", required = "required" })
                                                )
                                    </div>
                                </div>
                            </div>

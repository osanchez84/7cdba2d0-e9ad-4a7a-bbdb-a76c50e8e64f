        </div>
        <div class="col-md-4">
            <div class="controlForm">
                <label>Tipo licencia:</label>
                @(Html.Kendo().DropDownListFor(m => m.idTipoLicencia).Filter(FilterType.Contains)
                    .BindTo((SelectList)ViewBag.CatTipoLicencia)

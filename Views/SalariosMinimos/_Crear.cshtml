@model GuanajuatoAdminUsuarios.Models.SalariosMinimosModel

<section class=" bg-white rounded">
    <div class="row align-items-center justify-content-between px-4 px-md-4 pt-3 pb-2">
        <div class="col-auto pe-0">
            <div class="row align-items-center justify-content-center justify-content-md-start">
                <div class="col-auto pe-0">
                    <i class="icon-addUdi h1 colorPrimary"></i>
                </div>
                <div class="col-auto my-3">
                    <h2 class="m-0 h3"><b>Agregar unidades administrativas (UMA)</b></h2>
                </div>
            </div>
        </div>
        <div class="col-auto">
            <div class="row">
                <div class="col-auto my-3">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="bg-light py-1"></div>
        </div>

    </div>
    <div class="row">
        <div class="col-12 my-4">
            <h5 class="px-4"><b>Datos de unidades administrativas (UMA)</b></h5>
            <h6 class="px-4 text-muted">Completa los datos obligatorios para guardar.</h6>
        </div>
    </div>
    <form id="ProductForm" novalidate class="row needs-validation justify-content-center">

        <div class="row">
            <div class="col-12 col-md-6">
                <div class="controlForm my-3">
                    @(Html.Kendo().TextBoxFor(t => t.Area)
                        .Label(l => l.Content("Nombre <b>(obligatorio)</b>:"))
                        .Placeholder("Ingresa el nombre del área salarial")
                        .HtmlAttributes(new { style = "width: 100%" })
                        )

                </div>
            </div>

            <div class="col-12 col-md-6">
                <div class="controlForm my-3">
                    @(Html.Kendo().TextBoxFor(t => t.Anio)
                        .Label(l => l.Content("Año <b>(obligatorio)</b>:"))
                        .Placeholder("Ingresa el año de UMA")
                        .HtmlAttributes(new { style = "width: 100%", type = "number" })
                        )

                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12 col-md-6">
                <div class="controlForm my-3">
                    @(Html.Kendo().TextBoxFor(t => t.Salario)
                        .Label(l => l.Content("UMA <b>(obligatorio)</b>:"))
                        .Placeholder("Valor en $")
                        .HtmlAttributes(new { style = "width: 100%", type = "number" })
                        )

                </div>
            </div>

            <div class="col-12 col-md-6">
                <div class="controlForm my-3">
                    <label class="control-label">"Fecha Vigencia <b>(obligatorio)</b>:"</label>
                    @(Html.Kendo().DatePickerFor(t => t.Fecha)
                        .Culture("es-ES")
                        .Value(DateTime.Now)
                        .HtmlAttributes(new { style = "width: 100%" })
                        )
                </div>
            </div>
        </div>

    </form>
    <div class="row my-4">
        <div class="col-12 col-md-6 mx-md-auto">
            <div class="row justify-content-around">
                <div class="col-auto btnOutline my-2 mx-auto mx-xl-2 p-0">
                    <button type="button" data-bs-dismiss="modal" aria-label="Close">
                        <h6 class="m-0 px-3"><b>Cerrar</b></h6>
                    </button>
                </div>
                <div class="col-auto btnOutline btnOutlinePrimary my-2 mx-auto mx-xl-2 p-0">
                    <div class="controlButton">
                        <button class="btn btnPrimary px-3" onclick="agregarSalario()">Guardar</button>
                    </div>
                </div>
            </div>
        </div>


    </div>
</section>



<script>
    function agregarSalario() {
        var anio = $("#Anio").val();
        var importe = $("#Salario").val();
        if (anio < 1) {
            sitteg_warning("Debe ingresar el año.");
            return;
        }
        if (importe < 1) {
            sitteg_warning("Debe ingresar el valor de UMA.");
            return;
        }


        var Mydata = $("#ProductForm").serialize();
        console.log(Mydata);
        $('#addUdiSalario').modal('hide');
        $('body').removeClass('model-open');
        $('.modal-backdrop').remove();
        showLoading();
        $.ajax({
            url: '@Url.Action("CreatePartialModal")',
            type: 'POST',
            data: Mydata,
            success: function (result) {
                $("#gridCatUmas").data("kendoGrid").dataSource.data(result);
                sitteg_info('Se ha registrado la información exitosamente.');
                hideLoading();
            }, error: function () {
                sitteg_warning("Ocurrio un error al procesar su solicitud.");
                hideLoading();
            }
        });
    }

</script>


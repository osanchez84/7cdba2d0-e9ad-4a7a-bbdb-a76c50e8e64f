                <label>Calle <b>(obligatorio)</b>:</label>
                @(Html.Kendo().TextBoxFor(t => t.PersonaDireccion.calle)
                    .HtmlAttributes(new { style = "width: 100%; height:58px;", required = "required" })
                    )

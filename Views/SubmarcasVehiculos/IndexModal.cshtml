@model List<GuanajuatoAdminUsuarios.Models.SubmarcasVehiculosModel>
@*RazorCoder*@

    <div class="mainContainer bg-light">

        <section class="mx-md-3 mx-lg-4 mx-xl-5 bg-white boxShadow my-5 rounded">
            <div class="row align-items-center justify-content-between px-4 px-md-4 pt-3 pb-2">
                <div class="col-12 col-md-6 col-lg-5 col-xl-auto">
                    <div class="row align-items-center justify-content-center justify-content-md-start">
                        <div class="col-auto">
                            <i class="icon-subMarcar h1 colorPrimary"></i>
                        </div>
                        <div class="col-auto my-3">
                        <h2 class="m-0 h3"><b>Catálogo de submarcas de vehículos</b></h2>
                        </div>
                    </div>
                </div>            
                        <div class="col-12 col-md-6 col-lg-7 col-xl-auto">
                            <div class="row">
                                <div class="col-auto btnOutline btnOutlinePrimary my-2 mx-auto mx-xl-2 p-0">
                        <button href="#" id="btnNueop" onclick="mostrarModal()">
                            <h6 class="m-0 d-flex align-items-center"><i class="icon-addSubMarcar h5 mb-0 me-2"></i><b>Agregar nueva submarca de vehículo</b></h6>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="bg-light py-1"></div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-12 mb-4 px-4 rounded gridCustom">
                            <div class="row justify-content-between mb-1 titleCustom">
                                <div class="col-12 col-md-auto mt-4 mb-2">
                                    <h5 class="px-4"><b>Listado de submarca de vehículo</b></h5>
                                    <h6 class="px-4 text-muted">Edita o elimina las submarcas de vehículos.</h6>
                                </div>
                            </div>
            <div id="tablaSubmarcas">
                <partial name="_ListaSubmarcas" model="Model" />
<!--//////////////////////////////////////////////////////////////////////////////////////*******AGREGAR*******//////////////////////////////////////////////////////////////////////-->
    <div class="modal fade modalCustom" id="agregarSubmarca"  aria-labelledby="addSubMarcaLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg boxShadow modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body" id="agregarSubmarcaBody">

                </div>
            </div>

        </div>
    </div>

 <!--//////////////////////////////////////////////////////////////////////////////////////*******EDITAR*******//////////////////////////////////////////////////////////////////////-->
  <div class="modal fade modalCustom" id="editarSubMarca"  aria-labelledby="editarSubMarcaLabel" aria-hidden="true">
      <div class="modal-dialog modal-lg boxShadow modal-dialog-centered">
           <div class="modal-content">
               <div class="modal-body" id="editarSubmarcaBody">

               </div>
           </div>
       </div>
  </div>

 <!--//////////////////////////////////////////////////////////////////////////////////////*******ELIMINAR*******//////////////////////////////////////////////////////////////////////-->
 <div class="modal fade modalCustom" id="eliminarSubMarca"  aria-labelledby="eliminarSubMarcaLabel" aria-hidden="true">
      <div class="modal-dialog modal-lg boxShadow modal-dialog-centered">
           <div class="modal-content">
               <div class="modal-body" id="eliminarSubmarcaBody">

               </div>
           </div>
      </div>
 </div>
                                </div>
                            </div>
                        </div>
        </section>

    </div>

<script>
    function mostrarModal() {
        $.ajax({
            url: '@Url.Action("AgregarSubmarcaParcial")',
            type: 'POST',
            contentType: "application/json; charset=utf-8",
            dataType: "html",
            success: function (data) {
                $('#agregarSubmarcaBody').html(data);
                $('#agregarSubmarca').modal('show');
            }
        });
    }


</script>

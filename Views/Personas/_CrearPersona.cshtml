            <div class="controlForm">
                @(Html.Kendo().TextBoxFor(t => t.PersonaDireccion.codigoPostal)
                    .Label(l => l.Content("Código postal: <b>(obligatorio)</b>:"))
                    .HtmlAttributes(new { style = "width: 100%; height:58px;", required = "required" })
                    )

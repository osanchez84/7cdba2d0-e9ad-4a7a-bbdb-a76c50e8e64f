@model GuanajuatoAdminUsuarios.Models.CatDelegacionesOficinasTransporteModel
<section class=" bg-white rounded">
    <div class="row align-items-center justify-content-between px-4 px-md-4 pt-3 pb-2">
        <div class="col-auto pe-0">
            <div class="row align-items-center justify-content-center justify-content-md-start">
                <div class="col-auto pe-0">
                    <i class="icon-addOficinas h1 colorPrimary"></i>
                </div>
                <div class="col-auto my-3">
                    <h2 class="m-0 h3"><b>Agregar oficina-transporte</b></h2>
                </div>
            </div>
        </div>
        <div class="col-auto">
            <div class="row">
                <div class="col-auto my-3">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="bg-light py-1"></div>
        </div>

    </div>
    <div class="row">
        <div class="col-12 my-4">
            <h5 class="px-4"><b>Datos de Oficina-Transporte</b></h5>
            <h6 class="px-4 text-muted">Completa los datos obligatorios para guardar.</h6>
        </div>
    </div>
    <form id="agregarDelOficinaForm" class="row px-4 mb-4 align-items-end justify-content-center">
        <div class="col-12 col-md-4">
            <div class="controlForm my-3">
                <label>Sede / Municipio <b>(obligatorio)</b>:</label>
                <span>
                    @(Html.Kendo().DropDownListFor(t => t.IdMunicipio)
                        .Filter(FilterType.Contains)
                        .DataTextField("Text")
                        .DataValueField("Value")
                        .OptionLabel("Selecciona un Municipio")
                        .HtmlAttributes(new { @class = "CentradoList", style = "width:100%;" })
                        .DataSource(source =>
                        {
                            source.Read(read =>
                            {
                                read.Action("Municipios_Drop", "CatDelegacionesOficinasTransporte");
                            });
                        }))
                </span>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="controlForm my-3">
                @(Html.Kendo().TextBoxFor(t=>t.NombreOficina)
                    .Label(l => l.Content("Oficina-Transporte <b>(obligatorio)</b>:"))
                    .Placeholder("Ingresa el nombre de Oficina-Transporte")
                    .HtmlAttributes(new { style = "width: 100%" })
                    )

            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="controlForm my-3">
                @(Html.Kendo().TextBoxFor(t=>t.JefeOficina)
                    .Label(l => l.Content("Jefe de oficina <b>(obligatorio)</b>:"))
                    .Placeholder("Ingresa el nombre del jefe de oficina")
                    .HtmlAttributes(new { style = "width: 100%" })
                    )

            </div>
        </div>
    </form>
    <div class="row my-4">
        <div class="col-12 col-md-6 mx-md-auto">
            <div class="row justify-content-around">
                <div class="col-auto btnOutline my-2 mx-auto mx-xl-2 p-0">
                    <button type="button" data-bs-dismiss="modal" aria-label="Close">
                        <h6 class="m-0 px-3"><b>Cerrar</b></h6>
                    </button>
                </div>
                <div class="col-auto btnOutline btnOutlinePrimary my-2 mx-auto mx-xl-2 p-0">
                    <div class="controlButton" onclick="agregarDelegacionOficina()">
                        @(Html.Kendo().Button()
                            .Name("AddOficina")
                            .HtmlAttributes(new { @class = "btnPrimary px-3" })
                            .Content("<h5 class=\"m-0\"><b>Guardar</b></h5>"))
                    </div>
                </div>
            </div>
        </div>


    </div>
</section>
<script>
    function agregarDelegacionOficina() {

        var Mydata = $("#agregarDelOficinaForm").serialize();
        console.log(Mydata);
        $('#agregarDelegacionOficina').modal('hide');
        $('body').removeClass('model-open');
        $('.modal-backdrop').remove();
        $.ajax({
            url: '@Url.Action("AgregarDelegacionOficinaMod")',
            type: 'POST',
            data: Mydata,
            success: function (result) {
                $("#gridCatOficinasTransporte").data("kendoGrid").dataSource.data(result);
            }
        });
    }

</script>

@model GuanajuatoAdminUsuarios.Models.VehiculoBusquedaModel

<section class=" bg-white rounded">
            <div class="row align-items-center justify-content-between px-4 px-md-4 pt-3 pb-2">
                <div class="col-12 col-md-auto">
                    <div class="row align-items-center justify-content-center justify-content-md-start">
                        <div class="col-auto">
                            <div class="border border-2 border-dark rounded-circle">
                                <h5 class="m-0 numberCard d-flex align-items-center justify-content-center">
                                    <b>2</b>
                                </h5>
                            </div>
                        </div>
                        <div class="col-auto p-0">
                            <i class="icon-car h1 colorPrimary"></i>
                        </div>
                        <div class="col-auto my-3">
                            <h2 class="m-0 h3"><b>Vehículos involucrados</b></h2>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-7 col-xl-auto">
                    <div class="row">
                        <div class="col-auto btnOutline my-2 mx-auto mx-xl-2 p-0" onclick="goBack()">
                            @(Html.Kendo().Button()
                                .Name("backVehiculo")
                                .HtmlAttributes(new { @class = "px-5" })
                                .Content("<h6 class=\"m-0\"><i class=\"icon-back me-2\" data-bs-dismiss=\"modal\" aria - label = \"Close\" ></i><b>Regresar</b></h6>"))
                        </div>
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-5 pe-0">
                    <div class="bgSuccess py-1"></div>
                </div>
                <div class="col-7 ps-0">
                    <div class="bg-light py-1"></div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 mt-4">
                    <h5 class="px-4"><b>Datos del vehículo</b></h5>
                    <h6 class="px-4 text-muted">Completa los datos solicitados como Placas del Vehículo y N° de Serie del Vehículo.</h6>
                </div>
            </div>
            <div class="row px-4 align-items-end">
                <div class="col-12 mt-4 controlForm">
                    <label>Tipo de búsqueda:</label>
                </div>
            </div>
            <nav class="tabCustom">
                <div class="nav nav-tabs row mx-0" id="nav-tab" role="tablist">
                    <button class="nav-link active col" id="placa-vehiculo-tab" data-bs-toggle="tab" data-bs-target="#placa-vehiculo" type="button" role="tab" aria-controls="placa-vehiculo" aria-selected="true">
                        <div class="row justify-content-center align-items-center px-3 py-2">
                            <div class="col-auto radioCustom p-0">
                                <div class="rounded-circle m-2"></div>
                            </div>
                            <div class="col-auto p-0">
                                <h5 class="m-0"><i class="icon-placa h4"></i> <b>Placa del vehículo</b></h5>
                            </div>
                        </div>
                    </button>
                    <button class="nav-link col" id="serie-vehiculo-tab" data-bs-toggle="tab" data-bs-target="#serie-vehiculo" type="button" role="tab" aria-controls="serie-vehiculo" aria-selected="false">
                        <div class="row justify-content-center align-items-center px-3 py-2">
                            <div class="col-auto radioCustom p-0">
                                <div class="rounded-circle m-2"></div>
                            </div>
                            <div class="col-auto p-0">
                                <h5 class="m-0"><i class="icon-fisica h4"></i> <b>No. de serie del vehículo</b></h5>
                            </div>
                        </div>
                    </button>
                   
                </div>
            </nav>
            <form id="buscarVehiculoForm">

                <div class="tab-content" id="nav-tabContent">

                    <div class="tab-pane tabCustomConteiner fade show active" id="placa-vehiculo" role="tabpanel" aria-labelledby="placa-vehiculo-tab">
                        <div class="row px-4 mt-4 pb-4 align-items-end">
                            <div class="col-12 col-md-6 col-lg-4">
                                <div class="controlForm my-3">
                                    @(Html.Kendo().TextBoxFor(t => t.PlacasBusqueda)
                                        .Label(l => l.Content("Placa del vehículo:"))
                                        .Placeholder("Ingresa la placa del vehículo")
                                        .HtmlAttributes(new { style = "width: 100%" })
                                        )
                                </div>
                                <div id="ErrorMessage" class="error-container"></div>
                            </div>
                        </div>
                        
                    </div>
                    <div class="tab-pane tabCustomConteiner fade" id="serie-vehiculo" role="tabpanel" aria-labelledby="serie-vehiculo-tab">
                        <div class="row px-4 mt-4 pb-4 align-items-end">
                            <div class="col-12 col-md-6 col-lg-4">
                                <div class="controlForm my-3">
                                    @(Html.Kendo().TextBoxFor(t => t.SerieBusqueda)
                                        .Label(l => l.Content("Número de serie del vehículo:"))
                                        .Placeholder("Ingresa el número de serie del vehículo")
                                        .HtmlAttributes(new { style = "width: 100%" })
                                        )
                                </div>
                            </div>

                        </div>
                    </div>
                    
                   
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="tabCustomEnd"></div>
                    </div>
                </div>
            </form>
            <div class="col-12 col-md-6 mx-md-auto col-lg-4 mx-lg-0 ">
                <div class="controlButton my-3" onclick="busquedaVehiculo()">
                    @(Html.Kendo().Button()
                        .Name("buscar")
                        .HtmlAttributes(new { @class = "btnPrimary" })
                        .Content("<h5 class=\"m-0\"><b>Buscar</b></h5>"))
                </div>
            </div>
            
            <div class="modal fade modalCustom" id="VehiculoServiceModal" tabindex="-1" aria-labelledby="VehiculoServiceLabel" aria-hidden="true">
                <div class="modal-dialog modal-xl" role="document">
                    <div class="modal-content">
                        <div class="modal-body bg-light" id="ModalBodyVehiculoService">
                        </div>
                    </div>
                </div>
            </div>

            <!-- Modal genérico para mostrar mensajes de error -->
            <div class="modal fade" id="errorModal" tabindex="-1" role="dialog" aria-labelledby="errorModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="errorModalLabel">Vehículo no registrado en SITTEG</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="cierraModal()">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p id="errorMessage"></p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="cierraModal()">Cerrar</button>
                        </div>
                    </div>
                </div>
            </div>

        </section>

<script>
    function abrirModalVehiculo(placa) {
        $.ajax({
            url: '/CapturaAccidentes/AbrirModalVehiculo',
            type: 'GET',
            data: { placa: placa },
            success: function (data) {
                if (data.success) {
                    $('#errorMessage').text("Se han encontrado datos en el Registo Estatal, complete o corrija para importar los datos a SITTEG");
                    $('#errorModal').modal('show');
                    // $('#VehiculoServiceModal').modal('show');
                } else {
                    $('#errorMessage').text("Complete o ingrese la información necesaria para agregar este vehículo a SITTEG");
                    $('#errorModal').modal('show');

                    $('#ModalBodyVehiculoService').html(data);
                    $('#VehiculoServiceModal').modal('show');
                }
            },
            error: function () {
                // Manejar error de la llamada AJAX
                console.log("Error en la llamada AJAX para abrir el modal.");
            }
        });
    }


    function busquedaVehiculo() {
        var formData = $("#buscarVehiculoForm").serialize();
        $.ajax({
            url: '@Url.Action("ajax_BuscarVehiculo")',
            type: 'POST',
            data: formData,
            success: function (response) {
                console.log("WW", response);

                // Comprobar si es una respuesta de error debido a problemas de conexión
                if (response.success === false) {
                    sitteg_warning("No se encontraron resultados");
                    return;
                }

                if (response.noResults) {
                    alert("IF")
                    $('#errorMessage').text("Se han encontrado datos en el Registo Estatal, complete o corrija para importar los datos a SITTEG");
                    $('#errorModal').modal('show');
                    $('#ModalBodyVehiculoService').html(response);
                    $('#VehiculoServiceModal').modal({ backdrop: 'static', keyboard: false });
                    $('#VehiculoServiceModal').modal('show');
                } else {
                    $('#errorMessage').text(" Por favor complete o corrija para importar los datos a SITTEG");
                    $('#errorModal').modal('show');
                    $('#ModalBodyVehiculoService').html(response);
                    $('#VehiculoServiceModal').modal({ backdrop: 'static', keyboard: false });
                    $('#VehiculoServiceModal').modal('show');
                }
            },
            error: function () {
                sitteg_warning("Sucedio un error intente de nuevo mas tarde");
            }
        });
    }


    function goBack() {

        $('#agregarVehiculoModal').modal('hide');

    }

    function cierraModal() {

        $('#errorModal').modal('hide');

    }
</script>